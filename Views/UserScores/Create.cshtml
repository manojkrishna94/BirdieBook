@model BirdieBook.Models.UserScore

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>UserScore</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="UserRoundID" class="control-label"></label>
                <input asp-for="UserRoundID" class ="form-control" />
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="HoleID" class="control-label"></label>
                <input asp-for="HoleID" class="form-control" />
                <span asp-validation-for="HoleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoleNumber" class="control-label"></label>
                <input asp-for="HoleNumber" class="form-control" />
                <span asp-validation-for="HoleNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="FairwayHit" /> @Html.DisplayNameFor(model => model.FairwayHit)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PuttCount" class="control-label"></label>
                <input asp-for="PuttCount" class="form-control" />
                <span asp-validation-for="PuttCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" name="Next" value="Save & goto next hole" class="btn btn-default" />
                <input type="submit" name="Discard" value="Discard hole and return" class="btn btn-default" />
                <input type="submit" name="Finish" value="Finish round" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

