@model BirdieBook.Models.UserScore

@{
    ViewData["Title"] = "Edit";
}

@*<h2>Edit</h2>*@

<div class="row">
    <div class="col-xs-4">
        <div class="pull-left">
            <button type="button" class="btn btn-default btn-lg" id="prevBtn" onclick="location.href='@Url.Action("Create", "UserScores", new {UserRoundId = ViewBag.UserRoundId, TeeBoxId = ViewBag.TeeBoxId, HoleNumber=(ViewBag.HoleNumber-1)})'">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </button>
        </div>
    </div>
    <div class="col-xs-4">
        <h4 class="text-center">Hole: @ViewBag.HoleNumber</h4>
    </div>

    <div class="col-xs-4">
        <div class="pull-right">
            <button type="button" class="btn btn-default btn-lg" id="nextBtn" onclick="location.href='@Url.Action("Create", "UserScores", new {UserRoundId = ViewBag.UserRoundId, TeeBoxId = ViewBag.TeeBoxId, HoleNumber=(ViewBag.HoleNumber+1)})'">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </button>
        </div>
    </div>
</div>
<div class="text-center">
    <input id="registerScore" type="button" class="btn btn-large btn-primary" value="Edit" />
</div>

<hr />

<div style="display: none" id="registerForm">
    <form asp-action="Edit">
        @await Component.InvokeAsync($"UserScoreForm", new { UserScore = @Model })
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/UserScores/Create.js?rndstr=<%= getRandomStr() %>"></script>
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
