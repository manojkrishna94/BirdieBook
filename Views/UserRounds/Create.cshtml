@model UserRound
@{
    ViewData["Title"] = "Create";
}



<h2>Create</h2>

<h4>New Round</h4>
<hr />



<div id="row" class="row" >
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Golf Course</label>
                <input id="golfCourseName" class="form-control"/>
            </div>
            <div class="form-group" hidden="hidden">
                <label class="control-label">Golf Course Id</label>
                <input id="golfCourseId" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="TeeBoxId" class="control-label"></label>
                @*<input asp-for="TeeBoxId" class="form-control"/>*@

                <select id="teeBoxName" asp-for="TeeBoxId" class="form-control"></select>

                <span asp-validation-for="TeeBoxId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label hidden="hidden" asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" value="@ViewBag.UserName" class="form-control"/>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="@Model.TeeTime" class="control-label"></label>
                <input type="text" asp-for="@Model.TeeTime" id="teeTime" class="form-control" autocomplete="off"/>
                <span asp-validation-for="@Model.TeeTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserHcp" class="control-label"></label>
                @*<input asp-for="@Model.UserHcp" value="@ViewBag.Hcp" class="form-control"/>*@
                <select asp-for="@Model.UserHcp" class="form-control">
                    @for (decimal i = -540; i <80; i++)
                    {
                        <option value="@(i/10)">@(i>0? '+': ' ')@Math.Abs((i/10))</option>
                    }
                </select>
                <span asp-validation-for="@Model.UserHcp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Tournament" class="control-label"></label>
                <input asp-for="@Model.Tournament" class="form-control" id="comp"/>
                <span asp-validation-for="@Model.Tournament" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none" id="dsrDiv">
                <label asp-for="@Model.DailyScratchRating" class="control-label"></label>
                <input asp-for="@Model.DailyScratchRating" class="form-control" id="dsr"/>
                <span asp-validation-for="@Model.DailyScratchRating" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="@Model.WeatherCondition" class="control-label"></label>
                <input asp-for="@Model.WeatherCondition" class="form-control"/>
                <span asp-validation-for="@Model.WeatherCondition" class="text-danger"></span>
            </div>*@

            <br />
            <br />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>
 
<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/UserRounds/Create.js"></script>
<link rel="stylesheet" href="~/lib/jquery-datetimepicker/jquery.datetimepicker.min.css" />
<script src="~/lib/jquery-datetimepicker/jquery.datetimepicker.full.min.js"></script>
<script src="~/lib/jquery-datetimepicker/jquery.datetimepicker.min.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptsPartial");}
}


