@model Hole

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Hole</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HoleId" />
            <div class="form-group">
                <label asp-for="TeeBoxId" class="control-label"></label>
                <input asp-for="TeeBoxId" class="form-control" />       
                <input value="@ViewBag.TeeBoxName" class="form-control" readonly="readonly" />
                <span asp-validation-for="TeeBoxId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoleNumber" class="control-label"></label>
                <input asp-for="HoleNumber" class="form-control" readonly="readonly" />
                <span asp-validation-for="HoleNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Par" class="control-label"></label>
                <input asp-for="Par" class="form-control" />
                <span asp-validation-for="Par" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HcpIndex" class="control-label"></label>
                <input asp-for="HcpIndex" class="form-control" />
                <span asp-validation-for="HcpIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" name="Return" value="Return" class="btn btn-default" />
                <input type="submit" name="Continue" value="Save & Contine" class="btn btn-default" />

            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Back to List</a>*@
    <a asp-action="Details" asp-controller="GolfCourses" asp-route-id="@ViewBag.GolfCourseID">Back to Golf Course Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptsPartial");}
}
